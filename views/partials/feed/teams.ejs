<section class="feed-section-add">
    <form class="" action="" method="POST">
        <button class="btn profile-btns" type="submit">
            add teams
            <i class="fa-solid fa-circle-plus fa-lg"></i>
        </button>
    </form>
</section>
<section class="section-feed">
    <section class="section-list-feed">
        <ul class="list-feed">
            <% teams.forEach(el=> { %>
                <% if(el.user==user.id || user.teams.includes(el.team)) { %>
                    <li class="item-list-feed">
                        <section class="card">
                            <img src="https://img.favpng.com/14/2/16/logo-football-team-png-favpng-tzdASz0r6s1juSpCZVyq4VZJm.jpg"
                                class="card-img-top" alt="...">
                            <ul class="list-group list-group-flush list-card-feed">
                                <li class="list-group-item item-list-card">
                                    <%= el.team%>
                                </li>
                                <li class="list-group-item item-list-card">
                                    <%= el.sport%>
                                </li>
                                <li class="list-group-item item-list-card">
                                    <%= el.numberofplayers%>
                                </li>
                                <% if (el.win==='' || el.loss==='' ) {%>
                                    <li class="list-group-item item-list-card">
                                        0-0
                                    </li>
                                    <% } else { %>
                                        <li class="list-group-item item-list-card">
                                            <%= el.win %>-<%= el.loss%> | <%=
                                                        `.${(Number(el.win)/(Number(el.win)+Number(el.loss))).toFixed(3).toString().split('.')[1]}`
                                                        %>%
                                                        <% } %>
                                        </li>
                            </ul>
                            <section class="card-body-notes">
                                <p class="card-text">
                                    <%= el.notes%>
                                </p>
                            </section>
                            <section class="card-body-btns">
                                <form action="/teams/deleteTeam/<%= el._id %>?_method=DELETE" method="POST"
                                    class="feed-delete-form">
                                    <button class="btn feed-delete-btn" type="submit">
                                        <i class="fa-regular fa-trash-can fa-lg"></i>
                                    </button>
                                </form>

                                <a href="#" data-toggle="modal" data-target="#<%= el._id%>" id="editBtn">
                                    <i class="fa-regular fa-pen-to-square fa-lg"></i></a>


                                <a href="/teams/<%= el._id%>"> <i class="fa-solid fa-eye fa-lg"></i></a>
                            </section>
                        </section>
                    </li>

                    <!-- BEGINNIG EDIT MODAL -->
                    <div class="modal fade" id="<%= el._id%>" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Create Something</h5>
                                    <i class="fa-solid fa-square-xmark close" data-dismiss="modal"></i>
                                </div>
                                <div class="modal-body">
                                    <form action="/profile/updateTeam/<%= user.id%>?_method=PUT"
                                        enctype="application/x-www-form-urlencoded" method="POST">
                                        <div class="mb-3">
                                            <label for="team" class="form-label">Team</label>
                                            <input type="text" class="form-control form-control-sm" id="team"
                                                name="team" value="<%= el.team%>" placeholder="team">
                                        </div>
                                        <div class="mb-3">
                                            <label for="sport" class="form-label">Sport</label>
                                            <input type="text" class="form-control form-control-sm" id="sport"
                                                name="sport" value="<%= el.sport%>" placeholder="sport">
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary submit"
                                                value="Upload">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }}) %>
        </ul>
    </section>
</section>
<%- include('partials/headers/header-logo') -%>

  <main class="container-login-signup-main">
    <div class="container-login-signup-box">
      <section class="container-login-section container-login-signup-section">
        <h2 class="login-signup-title">SIGN IN</h2>
        <form action="/login" method="POST">
          <section class="section-login-form section-login-signup-form">
            <section class="section-each-input-login section-each-input-login-signup">
              <label for="exampleInputEmail1" class="form-label login-signup-text">Email
              </label>
              <input type="email" class="form-input" id="exampleInputEmail1" aria-describedby="emailHelp"
                name="email" />
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el=> { %>
                  <% if (el.msg.includes('email')) { %>
                    <span class="alert-msg">
                      <%= el.msg %>
                    </span>
                    <% } %>
                      <% }) %>
                        <% } %>
                          <% if (locals.messages.info) { %>
                            <% messages.info.forEach( el=> { %>
                              <% if (el.msg.includes('email')) { %>
                                <span class="alert-msg">
                                  <%= el.msg %>
                                </span>
                                <% } %>
                                  <% }) %>
                                    <% } %>


            </section>
            <section class="section-each-input-login section-each-input-login-signup">
              <label for="exampleInputPassword1" class="form-label login-signup-text">Password</label>
              <input type="password" class="form-input" id="exampleInputPassword1" name="password" />
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el=> { %>
                  <% if (!el.msg.includes('email')) { %>
                    <span class="alert-msg">
                      <%= el.msg %>
                    </span>
                    <% } %>
                      <% }) %>
                        <% } %>
                          <% if (locals.messages.info) { %>
                            <% messages.info.forEach( el=> { %>
                              <% if (!el.msg.includes('email')) { %>
                                <span class="alert-msg">
                                  <%= el.msg %>
                                </span>
                                <% } %>
                                  <% }) %>
                                    <% } %>
            </section>
          </section>
          <!-- <section class="container-alert">

          </section> -->
          <section class="container-btn">
            <button type="submit" class="login-signup-submit-btn">GO</button>
          </section>
        </form>
      </section>
    </div>
  </main>

  <%- include('partials/footer') -%>